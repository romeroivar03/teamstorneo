@page
@model Torneo.App.Frontend.Pages.Partidos.EditModel
@{
}
<h1>Editar partido</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="partido.Id"></label>
        <input asp-for="partido.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="partido.FechaHora"> Fecha y hora:</label>
        <input type="datetime-local" id="partido.FechaHora" name="partido.FechaHora">
    </div>
    <div class="form-group">
        <label asp-for="LocalSelected">Equipo local:</label>
        <select asp-for="LocalSelected" asp-items="@Model.LocalOptions" name="Local" class="form-control">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="partido.MarcadorLocal"></label>
        <input asp-for="partido.MarcadorLocal" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="VisitanteSelected">Equipo visitante:</label>
        <select asp-for="VisitanteSelected" asp-items="@Model.VisitanteOptions" name="Visitante" class="form-control">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="partido.MarcadorVisitante"></label>
        <input asp-for="partido.MarcadorVisitante" class="form-control">
    </div>
    <button type="submit" class="btn btn-outline-info">Actualizar</button>
</form>
<a class="btn btn-outline-success" asp-page="./Index">Volver</a>