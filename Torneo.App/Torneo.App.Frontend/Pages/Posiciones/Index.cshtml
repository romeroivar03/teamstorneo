@page
@model Torneo.App.Frontend.Pages.Posiciones1.IndexModel
@{
}
<a class="btn btn-primary" asp-page="./Create">Crear Posicion</a>
<h1>Listado de posiciones</h1>
<table class="table table-success table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var posicion in Model.posiciones)
        {
            <tr>
                <th scope="row">@posicion.Id</th>
                <td>@posicion.Nombre</td>
                <td>
                    <a class="btn btn-outline-success" asp-page="./Details" asp-route-id="@posicion.Id">
                        Detalle
                    </a>
               
                    <a class="btn btn-secondary" asp-page="./Edit" asp-route-id="@posicion.Id">
                        Editar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>